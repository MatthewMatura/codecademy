#a little triple nested if/else statements for your viewing pleasure

import random

name = "matty j"
question = "is this good?"
answer = ""
random_number = random.randint(1,9)

if name == "":
  print("Please introduce yourself first")
else:

  if question == "":
   print(name + ", You haven't asked me anything.  Do you need my assistance?  If not, I really need to get caught up on some chores.")
  else:

    if random_number == 1:
      print(name + " asks: " + question + " \nThe Magic 8-Ball's answer is: Yes - definitely.")
    elif random_number == 2:
      print(name + " asks: " + question + " \nThe Magic 8-Ball's answer is: It is decidely so.")
    elif random_number == 3:
      print(name + " asks: " + question + " \nThe Magic 8-Ball's answer is: Without a doubt.")
    elif random_number == 4:
      print(name + " asks: " + question + " \nThe Magic 8-Ball's answer is: Reply hazy, try again")
    elif random_number == 5:
      print(name + " asks: " + question + " \nThe Magic 8-Ball's answer is: Ask again later.")
    elif random_number == 6:
      print(name + " asks: " + question + " \nThe Magic 8-Ball's answer is: Better not tell you.")
    elif random_number == 7:
      print(name + " asks: " + question + " \nThe Magic 8-Ball's answer is: My sources say no.")
    elif random_number == 8:
      print(name + " asks: " + question + " \nThe Magic 8-Ball's answer is: Outlook not so good.")
    elif random_number == 9:
      print(name + " asks: " + question + " \nThe Magic 8-Ball's answer is: Very doubtful.  Stick to your day job.")

    else:
      print("im tired")
